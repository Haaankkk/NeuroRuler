# This script should be sourced
# Run with . scripts/testdist
# This script uninstalls NeuroRuler, builds the package, and installs it locally
# Please see the comment above the cd ..

rm -r dist
pip uninstall NeuroRuler -y
python3 setup.py sdist
# There will be only one file
for file in dist/*; do
    pip install $file;
done

# Need to test from directory that isn't NeuroRuler/
# Importing NeuroRuler stuff from NeuroRuler directory will import from the NeuroRuler directory
# Not the pip package
cd ..
